#!/bin/sh
#
# RunWM - this is a script used to launch window manager
#

if [ -x /usr/bin/mwm ] ; then
	if [ -e $HOME/.mwmrc ] ; then
		eval "exec /usr/bin/mwm -xrm \"mwm*configFile: $HOME/.mwmrc\""
	else
		eval "exec /usr/bin/mwm -xrm \"mwm*configFile: /etc/X11/mwm/system.mwmrc\""
	fi
else
cat <<EOF
 WARNING: You selected MWM as your window manager, but your installation
 of MWM does not appear to be functional. The file /usr/bin/mwm
 could not be found.
EOF
fi
